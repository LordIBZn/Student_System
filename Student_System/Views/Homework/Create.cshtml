@model Student_System.Models.ViewModels.HomeworkViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Homework</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContentType" class="control-label"></label>
                <input asp-for="ContentType" class="form-control" />
                <span asp-validation-for="ContentType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubmissionDate" class="control-label"></label>
                <input asp-for="SubmissionDate" class="form-control" />
                <span asp-validation-for="SubmissionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="file">Choose the file to upload</label>
                <input type="file" class="form-control-file" name="file" id="file" />
                <label for="file">choose the directory to save the file</label>
                <select name="location">
                    <option value="1">Images</option>
                    <option value="2">Documents</option>
                    <option value="0">Dowloads</option>
                    <option value="3">Temp</option>
                </select>
            </div>
            <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label  class="control-label"> Select Student </label>
                        <select asp-for="StudentsId" class="form-control" asp-items="@ViewBag.Students"></select>
            </div>
        </div>
    </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
