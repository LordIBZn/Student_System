@using Student_System.Models.ViewModels
@model IEnumerable<CoursesViewModel>
@{
    ViewData["Title"] = "AllCoursesonGivenDate";
}

<div>

    <h4>Courses</h4>
    <div class="row">
        <div class="col-md-4">
            <form asp-controller="Courses" asp-action="AllCoursesonGivenDate" method="post">
                <div>
                    <label for="End Date">End Date</label>
                    <input id="EndDate" type="date" class="form-control" name="EndDate" />
                </div>
                <div>
                    <button class="btn btn-primary" type="submit">
                        Send
                    </button>
                </div>
            </form>
        </div>
    </div>
    <hr />
    <table class="table">
        <thead>
            <tr>
               
                <th>
                    Course Name
                </th>
                <th>
                    Star Date
                </th>
                <th>
                    End Date
                </th>
                <th>
                    Course Duration
                </th>
                <th>
                    Student Count
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CourseName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StarDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CourseDuration)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudentCount)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>