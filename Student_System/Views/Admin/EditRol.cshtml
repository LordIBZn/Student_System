@using Student_System.Models.ViewModels
@model EditRolViewModel

@{
    ViewBag.Title = "EditRol";
}

    <h1>Edit Rol</h1>
<form method="post" class="mt-3">
   <div class="form-group row">  
       <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control" />
        </div>
   </div>

   <div class="form-range row">
       <label asp-for="RolName" class="col-sm-2 col-form-label"></label>
       <div class="col-sm-10">
           <input asp-for="RolName" class="form-control"/>
           <span asp-validation-for="RolName" class="text-danger"></span>
       </div>
   </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary" style="width:auto">Edit Rol</button>
            <a asp-action="GetRoles" class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>User whit that rol</h3>
        </div>
        <div class="card-body">
            @if (Model.User.Any())
            {
                for (int i = 0; i < Model.User.Count; i++)
                {
                    <h5 class="card-title">@Model.User[i]</h5>
                }
            }
            else
            {
                <h5 class="card-title">Nothing for now</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-controller="Admin" asp-action="EditUserRol"
           asp-route-rolId="@Model.Id" class="btn btn-primary" style="width:auto">
           Create or Delete user
           </a>
        </div>
    </div>
</form>
