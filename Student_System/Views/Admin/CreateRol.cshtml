@model CreateRolViewModel

@{
    ViewBag.Title = "CreateRol";
}
<h1>Create new Rol</h1>

<form asp-action="CreateRol" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger">
    </div>
    <div class="form-group row">
        <label asp-for="RolName" class="col-sm-2 col-form-label" ></label>
        <div class="col-sm-10">
            <input asp-for="RolName" class="form-control" placeholder="Name" />
            <span asp-validation-for="RolName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary" style="width:auto">
                Create Rol
            </button>
        </div>
    </div>
</form>

