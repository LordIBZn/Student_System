@using Student_System.Models.ViewModels
@model CreateAcountViewModel

@{
    ViewBag.Tittle = "CreateAcount";
}

@Html.Raw(TempData["msg"])

<h1>Create a New Identity user</h1>

<form asp-action="CreateAcount" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <label asp-for="StudentsId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="StudentsId" class="form-control" asp-items="@ViewBag.Students"></select>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" placeholder="email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Password" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Password" type="password" class="form-control" placeholder="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary" style="width:auto">
                Create Acount
            </button>
        </div>
    </div>
</form>
